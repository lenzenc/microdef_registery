= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %h2= t('login.title')
    %br
    = f.text_field :email, :class => "form-control", :autofocus => true, :placeholder => t('login.login_placeholder')
    %br
    = f.password_field :password, :class => "form-control", :placeholder => t('login.password_placeholder')
    %br
    %button{class: "btn btn-lg btn-primary btn-block"}=t('btn.sign_in')